<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_1"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_marginVertical="16dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:background="?selectableItemBackground"
    app:cardCornerRadius="7dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground">


        <TextView
            android:id="@+id/card_title"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textColor="#161616"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/card_image_start"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/card_image_start"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_round_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/card_title"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imageButton_card_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_shape_black"
            android:src="@drawable/ic_round_import_export"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/card_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_title"
            app:layout_constraintVertical_bias="0.0" />

        <ImageButton
            android:id="@+id/imageButton_card_2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_shape_black"
            android:src="@drawable/ic_round_local_phone"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_card_1"
            app:layout_constraintStart_toStartOf="@+id/imageButton_card_1"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_card_1" />

        <ImageButton
            android:id="@+id/imageButton_card_3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_shape_black"
            android:src="@drawable/ic_round_message"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_card_2"
            app:layout_constraintStart_toStartOf="@+id/imageButton_card_2"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_card_2" />

        <TextView
            android:id="@+id/card_txt_mgb"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textColor="#161616"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton_card_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.14"
            app:layout_constraintStart_toEndOf="@+id/imageButton_card_1"
            app:layout_constraintTop_toBottomOf="@+id/card_title" />

        <TextView
            android:id="@+id/card_txt_min"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="#161616"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton_card_2"
            app:layout_constraintEnd_toStartOf="@+id/card_image_start"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/card_txt_mgb"
            app:layout_constraintTop_toBottomOf="@+id/card_txt_mgb" />

        <TextView
            android:id="@+id/card_txt_sms"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="#161616"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton_card_3"
            app:layout_constraintEnd_toStartOf="@+id/card_image_start"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/card_txt_min"
            app:layout_constraintTop_toBottomOf="@+id/card_txt_min" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="15dp"
            android:background="@color/range_line_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_txt_sms"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/card_txt_narxi"
            android:layout_width="190dp"
            android:layout_height="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textColor="#161616"
            android:textSize="@dimen/text_size_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>