<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentDark"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_32dp"
        android:background="@drawable/background_loading_dialog"
        android:elevation="16.0dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dimen_24dp"
        android:paddingTop="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_24dp"
        android:paddingBottom="@dimen/dimen_16dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:lottie_autoPlay="true"
            app:lottie_fileName="loading.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/text_view_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="Yuklanyapti"
            android:textColor="@color/colorTextPrimary"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>
</LinearLayout>